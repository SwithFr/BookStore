include ../../partials/_headerPages
include ../../partials/_navPages
.content#content
    .section.dashbord
        .section__header
            h2.section__title Dashboard utilisateur
            .section__block
                h3.section__block__title Mes livres ajoutés
                ul.books__list
                    - for(var i = 0; i < 8; i++)
                        li.books__list__item Titre du livre
                            .actions
                                a(href='#') Edit
                                    i(class='icon-pencil')
                                a.admin--delete(href='#') Suppr
                                    i(class='icon-cancel')
            .section__block
                h3.section__block__title Ajouter un livre
                form
                    input.form__addBook__input(type='text', placeholder='Titre du livre')
                    input.form__addBook__input(type='text', placeholder='Année de publication')
                    input.form__addBook__input(type='text', placeholder='Genre')
                    input.form__addBook__input(type='text', placeholder='Auteur')
                    textarea.form__addBook__input(placeholder='Résumé')
                    input.form__addBook__input(type='file')
                    input.form__addBook__input(type='submit', value='Ajouter')
include ../../partials/_footerPages