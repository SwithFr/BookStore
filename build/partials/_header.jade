- var logged = false
- var user = { role: 'user' }
doctype
html
    head
        meta(charset='utf-8')
        block css
            link(rel='stylesheet', href='./assets/css/main.css')
        title BookStore
    body
        block header
            header.header.header--home
                .header__content
                    .header__title
                        p Une nouvelle manière de découvir,
                        p partager et lire des livres
                    .header__login
                        if logged
                            if user.role == 'admin'
                                a.btn.btn--white(href="./views/admin/index.html") Administration
                            else
                                a.btn.btn--white(href="./views/users/index.html") Mon compte
                            a.btn.btn--white(href="#") Déconnexion
                        else
                            a.btn.btn--white(href="./views/users/register.html") Créer un compte
                            a.btn.btn--white(href="./views/users/login.html") Connexion